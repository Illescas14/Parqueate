<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FCFDF8"
    android:padding="35dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifica tu correo electrónico"
        android:textSize="24sp"
        android:textColor="#1C415C"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hemos enviado un enlace de verificación a tu correo. Haz clic en el enlace y luego presiona 'Continuar'. Si no lo recibes en unos minutos, revisa tu carpeta de spam o correo no deseado."
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C415C"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <Button
        android:id="@+id/resendEmailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B0BEC5"
        android:text="Reenviar correo"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>